<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="subhead">
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>
    <style name="subhead.white"><item name="android:textColor">@color/colorWhite</item></style>
    <style name="subhead.white.medium"><item name="android:fontFamily">@font/proxima_nova_medium</item></style>

    <style name="headline">
        <item name="android:textSize">@dimen/material_text_headline</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>
    <style name="headline.white"><item name="android:textColor">@color/colorWhite</item></style>
    <style name="headline.white.bold"><item name="android:fontFamily">@font/proxima_nova_bold</item></style>

    <style name="button_primary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:background">@drawable/bg_primary_button</item>
    </style>


</resources>
