<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="subhead">
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>
    <style name="subhead.text"><item name="android:textColor">@color/colorBlack</item></style>
    <style name="subhead.text.medium"><item name="android:fontFamily">@font/proxima_nova_medium</item></style>
    <style name="subhead.white"><item name="android:textColor">@color/colorWhite</item></style>
    <style name="subhead.white.medium"><item name="android:fontFamily">@font/proxima_nova_medium</item></style>

    <style name="headline">
        <item name="android:textSize">@dimen/material_text_headline</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>
    <style name="headline.white"><item name="android:textColor">@color/colorWhite</item></style>
    <style name="headline.white.bold"><item name="android:fontFamily">@font/proxima_nova_bold</item></style>
    <style name="headline.green"><item name="android:textColor">@color/colorPrimaryDark</item></style>
    <style name="headline.green.bold"><item name="android:fontFamily">@font/proxima_nova_bold</item></style>

    <style name="button_primary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="cornerRadius">@dimen/spacer4</item>
        <item name="android:paddingTop">@dimen/spacer4</item>
        <item name="android:paddingBottom">@dimen/spacer4</item>
    </style>

    <style name="input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/spacer2_5</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacer2_5</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacer2_5</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacer2_5</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
    </style>

</resources>
